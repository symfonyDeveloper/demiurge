{% extends 'base.html.twig' %}
{% block bread %}
    <div class="layui-row layui-bg-gray">
        <div class="layui-col-md8 layui-col-md-offset1">
            <h3 class="text-left">菜单列表</h3>
        </div>
        <div class="layui-col-md3">
            <a class="layui-btn layui-btn-normal text-center" href="{{ path('admin_menu_add') }}">添加</a>
        </div>
    </div>{% endblock %}
{% block body %}
    {# total items count #}
{#    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>#}
    <table  class="layui-table">
        <thead>
        <tr>
            {# sorting of properties based on query components #}
            <th>编号</th>
            <th>父id</th>
            <th>名称</th>
            <th>路由地址</th>
            <th>权限标识</th>
            <th>类型</th>
            <th>icon<a href="http://www.layui.com/doc/element/icon.html">链接</a></th>
            <th>排序</th>
            <th>操作</th>
        </tr>
        </thead>
        {# table body #}
        <tbody>
        {% for menu in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ menu.id }}</td>
                <td>{{ menu.parentId }}</td>
                <td>{{ menu.name}}</td>
                <td>{{ menu.url }}</td>
                <td>{{ menu.perms }}</td>
                <td>
                    {% if menu.type == 0 %}
                        目录
                    {% elseif menu.type == 1 %}
                        菜单
                    {% elseif menu.type == 2 %}
                        按钮
                    {% endif %}
                </td>
                <td><i class="layui-icon">{% autoescape false %}{{ menu.icon }}{% endautoescape %}</i></td>
                <td>{{ menu.orderNum }}</td>
                <td>
                    {#{% if user.isActive == 1 %}启用{% else %}禁用{% endif %}#}
                    <a href="{{ path('admin_menu_update', {id: menu.id}) }}">更新</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
