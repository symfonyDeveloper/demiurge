{% extends 'base.html.twig' %}
{% block header %}
    <span style="font-size: 22px;">更新角色</span>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <form role="form" method="post" action="">

                <div class="form-group">
                    <label class="control-label" for="inputSuccess">角色名</label>
                    <input type="text" name="role_name" value="{{ role.roleName }}" class="form-control" id="inputSuccess">
                </div>

                <div class="form-group">
                    <label class="control-label" for="inputWarning">备注</label>
                    <input type="text" name="remark" value="{{ role.remark }}" class="form-control" id="inputWarning">
                </div>

                <button type="submit" class="btn btn-default">提交</button>
                <a href="javascript:history.back(-1)" class="btn btn-default">返回</a>
            </form>
        </div>
    </div>
{% endblock %}