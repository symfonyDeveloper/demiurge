{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <form class="form-horizontal" method="post" action="">

                <div class="form-group">
                    <label class="control-label col-sm-1" for="username">用户名</label>
                    <div class="col-sm-10">
                        <input type="text" name="username" value="{{ user.username }}" class="form-control" id="username">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-1" for="email">邮箱</label>
                    <div class="col-sm-10">
                        <input type="text" name="email" value="{{ user.email }}" class="form-control" id="email">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-1" for="password">密码</label>
                    <div class="col-sm-10">
                        <input type="text" name="password" class="form-control" id="password" placeholder="密码不修改不填">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-1" for="roleList">角色</label>
                    <div class="col-sm-10">
                        {% for roles in roleList %}
                            <label class="checkbox-inline">
                                <input name="role[]" type="checkbox" value="{{ roles.id }}"{% if roles.id in userRole %}checked{% endif %}> {{ roles.roleName }}
                            </label>
                        {% endfor %}
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-1" for="submit"></label>
                    <div  class="col-sm-10">
                        <button type="submit" class="btn btn-default" id="submit">提交</button>
                        <a href="javascript:history.back(-1)" class="btn btn-default">返回</a>
                    </div>
                </div>
        </div>
    </div>
{% endblock %}